        <StackLayout
            Padding="0, 20, 0, 0"
            >
          <Label
            Text="Currency Exchange Status" 
            HorizontalTextAlignment="Center"
            />

            <Button
            Text="Check Status"
             Clicked="Handle_ClickedCurrency"
            />

            <Label
                x:Name = "Source"
                
            />

           <Label
                x:Name="Quotes"
              

            />
            
        </StackLayout>
	</ContentPage.Content>
</ContentPage>
